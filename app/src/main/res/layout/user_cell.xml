<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="260dp"
    app:cardElevation="@dimen/elevation_card_view"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageViewUserImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height_cell"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/textViewFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/name_size_cell"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/primaryText"
                />
            <TextView
                android:id="@+id/textViewLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/textViewFirstName"
                android:textSize="@dimen/name_size_cell"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/primaryText"

                />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
